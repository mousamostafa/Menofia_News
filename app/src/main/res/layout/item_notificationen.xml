<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#b2dfdb"
    android:layout_marginTop="3dp"
    android:elevation="4dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/texserchn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/imageViewn"
        android:background="#0089ce"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_toEndOf="@+id/imageViewn" />

    <TextView
        android:id="@+id/textitlen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/texserchn"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/imageViewn"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_toEndOf="@+id/imageViewn"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tddn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/imageViewn"
        android:background="#0089ce"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_below="@+id/textitlen"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageViewn" />

</RelativeLayout>

